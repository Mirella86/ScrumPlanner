@model IEnumerable<ScrumUI.ResourceSkill>
<h3>Skills</h3>
<table>
    <tr>
        <th style="width: 20%">
            @Html.Name("Name")
        </th>
        <th style="width: 10%">
            @Html.Name("Value")
        </th>
        <th style="width: 30%"></th>
    </tr>

    @foreach (var item in Model.OrderBy(item => item.Skill.SkillName))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Skill.SkillName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillValue)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", "ResourceSkill", new { area = "", id = item.ResourceSkillID }, null)
                @*        @Html.ActionLink("Details", "Details", "ResourceSkill", new { area = "", id = item.ResourceSkillID }, null) |
            @Html.ActionLink("Delete", "Delete", "ResourceSkill", new { area = "", id = item.ResourceSkillID }, null) *@
            </td>
        </tr>
    }

</table>

@model IEnumerable<ScrumUI.Resource>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New Resource", "Create")
</p>
<table>
    <tr>
        <th style="width: 20%">
            @Html.Name("First Name")
        </th>
        <th style="width: 20%">
            @Html.Name("Last Name")
        </th>
        <th style="width: 20%">
            @Html.Name("Productivity index")
        </th>
        <th style="width: 20%">
            @Html.Name("Assigned hours")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductivityIndex) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedHours)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ResourceId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ResourceId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ResourceId })
            </td>
        </tr>
    }

</table>
